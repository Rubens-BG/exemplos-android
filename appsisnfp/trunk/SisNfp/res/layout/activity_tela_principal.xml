<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/svPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_laramara" >

    <LinearLayout
        android:id="@+id/laPrincipal"
        android:layout_width="match_parent"
        android:layout_height="506dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="br.org.laramara.sisnfp.controladores.ControladorTelaPrincipal" >

        <ImageView
            android:id="@+id/imLaramaraBottom"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.27"
            android:adjustViewBounds="true"
            android:contentDescription="@string/imagem_logotipo_laramara"
            android:scaleType="fitXY"
            android:src="@drawable/logo_nota_fiscal" />

        <TextView
            android:id="@+id/tvInfoEnvioNotaFiscal2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/info_tela_principal_breve_descricao"
           android:textColor="@color/preto"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/laBotoes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btDoarNotaFiscal"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/bt_azul_laramara"
                android:text="@string/botao_doar_nota_fiscal"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btQuemSomos"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="@string/botao_quem_somos" />

            <Button
                android:id="@+id/btComoAjudar"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:text="@string/botao_como_ajudar" />

            <Button
                android:id="@+id/btSair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/botao_sair" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>