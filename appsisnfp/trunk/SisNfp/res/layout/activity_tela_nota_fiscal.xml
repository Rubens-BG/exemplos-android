<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/svPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_laramara"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/laPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="br.org.laramara.sisnfp.controladores.ControladorTelaPrincipal" >

        <ImageView
            android:id="@+id/imLaramaraBottom"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/imagem_logotipo_laramara"
            android:scaleType="fitXY"
            android:src="@drawable/logo_nota_fiscal" />

        <TextView
            android:id="@+id/tvInfoEnvioNotaFiscal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/info_tela_nota_fiscal_envio_nota_fiscal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/preto"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvInfoEnvioNotaFiscal2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:text="@string/info_tela_nota_fiscal_envio_nota_fiscal_2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/preto"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/laImagem"
            android:layout_width="match_parent"
            android:layout_height="200dp" >

            <ImageView
                android:id="@+id/imNotaFiscal"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/imagem_exemplo_nota_fiscal"
                android:scaleType="fitXY"
                android:src="@drawable/exemplo_nf" />
        </LinearLayout>

        <Button
            android:id="@+id/btFotografarNotaFiscal"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@color/bt_azul_laramara"
            android:text="@string/botao_fotografar_nota_fiscal"
            android:textColor="@color/branco" />
    </LinearLayout>

</ScrollView>